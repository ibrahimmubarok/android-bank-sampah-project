<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_4"
        android:paddingLeft="@dimen/item_margin_1"
        android:paddingRight="@dimen/item_margin_1"
        android:paddingBottom="@dimen/item_margin_4"
        android:background="@drawable/shadow"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            card_view:cardElevation="4dp"
            app:cardCornerRadius="@dimen/item_margin_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin_12"
                android:background="@drawable/shadow_card_view">

                <TextView
                    android:id="@+id/tv_week_detail_tabungan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/item_margin_8"
                    android:layout_marginLeft="@dimen/item_margin_8"
                    android:maxLines="2"
                    android:text="@string/label_week"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_size_18"
                    app:fontFamily="@font/coolvetica_rg"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_container_week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_week_detail_tabungan"
                    tools:listitem="@layout/item_container_week"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>