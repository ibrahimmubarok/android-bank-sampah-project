<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context=".ui.TabunganFragment"
    android:id="@+id/layout_tabungan">

    <ProgressBar
        android:id="@+id/progress_bar_tabungan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <include
        android:id="@+id/layout_no_koneksi"
        layout="@layout/fragment_no_internet"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/main_layout_tabungan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/item_margin_32"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_greeting"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/coolvetica_rg"
                    android:textSize="@dimen/item_size_20" />

                <TextView
                    android:id="@+id/tv_nama_nasabah"
                    android:layout_width="@dimen/item_margin_38"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:maxLines="3"
                    android:text="@string/value_name"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/item_size_20"
                    android:fontFamily="@font/coolvetica_rg"/>

                <ImageView
                    android:layout_width="@dimen/item_margin_48"
                    android:layout_height="@dimen/item_margin_38"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/item_margin_4"
                    android:layout_marginLeft="@dimen/item_margin_2"
                    android:layout_marginStart="@dimen/item_margin_2"
                    android:src="@drawable/ic_logo_bss"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_32">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorFont"
                    android:fontFamily="@font/coolvetica_rg"
                    android:maxLines="3"
                    android:textSize="@dimen/item_size_14"
                    android:text="@string/label_savings_greeting" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_32"
                android:paddingLeft="@dimen/item_margin_2"
                android:paddingRight="@dimen/item_margin_2"
                android:paddingBottom="@dimen/item_margin_4"
                android:background="@drawable/shadow"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"
                    card_view:cardElevation="@dimen/item_margin_10"
                    app:cardCornerRadius="@dimen/item_radius_8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/item_margin_8"
                        android:background="@drawable/shadow_card_view"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_amount"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/coolvetica_rg"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/item_margin_6"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_currency"
                                android:textSize="@dimen/item_size_20"
                                android:textColor="@color/colorPrimaryDark"
                                android:fontFamily="@font/coolvetica_rg"/>

                            <TextView
                                android:id="@+id/tv_total_uang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/item_margin_8"
                                android:layout_marginStart="@dimen/item_margin_8"
                                android:text="@string/zero"
                                android:textSize="@dimen/item_size_20"
                                android:textColor="@color/colorPrimaryDark"
                                android:fontFamily="@font/coolvetica_rg"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/item_margin_2"
                android:paddingRight="@dimen/item_margin_2"
                android:paddingBottom="@dimen/item_margin_4"
                android:background="@drawable/shadow"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"
                    card_view:cardElevation="@dimen/item_margin_10"
                    app:cardCornerRadius="@dimen/item_radius_8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/item_margin_8"
                        android:background="@drawable/shadow_card_view"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_weight"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/coolvetica_rg"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/item_margin_6"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_amount_of_waste"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zero"
                                android:textSize="@dimen/item_size_20"
                                android:textColor="@color/colorPrimaryDark"
                                android:fontFamily="@font/coolvetica_rg"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/item_margin_8"
                                android:layout_marginStart="@dimen/item_margin_8"
                                android:text="@string/unit_weight"
                                android:textSize="@dimen/item_size_20"
                                android:textColor="@color/colorPrimaryDark"
                                android:fontFamily="@font/coolvetica_rg"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_riwayat_transaksi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/item_margin_2"
                android:paddingRight="@dimen/item_margin_2"
                android:paddingBottom="@dimen/item_margin_4"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:background="@drawable/shadow"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@android:color/transparent"
                    card_view:cardElevation="@dimen/item_margin_10"
                    app:cardCornerRadius="@dimen/item_radius_8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/item_margin_8"
                        android:background="@drawable/shadow_card_view"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/riwayat_transaksi"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/coolvetica_rg"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="@dimen/item_margin_6"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_preview_riwayat_kosong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/belum_pernah_melakukan_transaksi"
                                android:textColor="@color/colorPrimaryDark"
                                android:fontFamily="@font/coolvetica_rg"
                                android:textSize="@dimen/item_size_14"
                                android:layout_marginRight="@dimen/item_margin_8"
                                android:layout_marginEnd="@dimen/item_margin_8"
                                android:visibility="gone"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_preview_riwayat_transaksi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/item_preview_riwayat_transaksi"/>

                            <TextView
                                android:id="@+id/tv_detail_riwayat_transaksi_tabungan"
                                android:layout_width="@dimen/item_margin_0"
                                android:layout_height="wrap_content"
                                android:text="@string/label_details"
                                android:textAlignment="viewEnd"
                                android:layout_gravity="bottom"
                                android:layout_weight="1"
                                android:textSize="@dimen/item_size_12"
                                android:fontFamily="@font/coolvetica_rg"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>