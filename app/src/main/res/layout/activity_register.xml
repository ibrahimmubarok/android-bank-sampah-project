<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context="com.sahitya.banksampahsahitya.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_register"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorBackgroundGreen"
                app:titleTextColor="@color/white"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_16"
            android:layout_marginLeft="@dimen/item_margin_32"
            android:layout_marginRight="@dimen/item_margin_32"
            android:layout_marginBottom="@dimen/item_margin_16"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nama"
                android:textColor="@color/colorFont"
                android:layout_marginTop="@dimen/item_margin_16"
                android:layout_marginLeft="@dimen/item_margin_8"
                android:layout_marginStart="@dimen/item_margin_8"
                android:layout_marginBottom="@dimen/item_margin_8"
                app:fontFamily="@font/coolvetica_rg"/>

            <EditText
                android:id="@+id/edit_text_name_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin_12"
                android:background="@drawable/bg_rounded_edit_text"
                android:textSize="@dimen/item_size_14"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDimGray"
                android:textAlignment="center"
                android:inputType="text"
                android:hint="@string/nama"
                app:fontFamily="@font/coolvetica_rg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nim"
                android:textColor="@color/colorFont"
                android:layout_margin="@dimen/item_margin_8"
                app:fontFamily="@font/coolvetica_rg"/>

            <EditText
                android:id="@+id/edit_text_nim_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin_12"
                android:background="@drawable/bg_rounded_edit_text"
                android:textSize="@dimen/item_size_14"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDimGray"
                android:textAlignment="center"
                android:hint="@string/nim"
                app:fontFamily="@font/coolvetica_rg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fakultas"
                android:textColor="@color/colorFont"
                android:layout_margin="@dimen/item_margin_8"
                app:fontFamily="@font/coolvetica_rg"/>

            <EditText
                android:id="@+id/edit_text_fakultas_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin_12"
                android:background="@drawable/bg_rounded_edit_text"
                android:textSize="@dimen/item_size_14"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDimGray"
                android:textAlignment="center"
                android:editable="false"
                android:hint="@string/fakultas"
                app:fontFamily="@font/coolvetica_rg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jurusan"
                android:textColor="@color/colorFont"
                android:layout_margin="@dimen/item_margin_8"
                app:fontFamily="@font/coolvetica_rg"/>

            <EditText
                android:id="@+id/edit_text_jurusan_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin_12"
                android:background="@drawable/bg_rounded_edit_text"
                android:textSize="@dimen/item_size_14"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDimGray"
                android:textAlignment="center"
                android:editable="false"
                android:hint="@string/jurusan"
                app:fontFamily="@font/coolvetica_rg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_hp"
                android:textColor="@color/colorFont"
                android:layout_margin="@dimen/item_margin_8"
                app:fontFamily="@font/coolvetica_rg"/>

            <EditText
                android:id="@+id/edit_text_no_hp_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin_12"
                android:background="@drawable/bg_rounded_edit_text"
                android:textSize="@dimen/item_size_14"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDimGray"
                android:textAlignment="center"
                android:inputType="phone"
                android:hint="@string/no_hp"
                app:fontFamily="@font/coolvetica_rg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alamat"
                android:textColor="@color/colorFont"
                android:layout_margin="@dimen/item_margin_8"
                app:fontFamily="@font/coolvetica_rg"/>

            <EditText
                android:id="@+id/edit_text_alamat_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin_12"
                android:background="@drawable/bg_rounded_edit_text"
                android:textSize="@dimen/item_size_14"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDimGray"
                android:textAlignment="center"
                android:hint="@string/alamat"
                app:fontFamily="@font/coolvetica_rg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tanggal_lahir"
                android:textColor="@color/colorFont"
                android:layout_margin="@dimen/item_margin_8"
                app:fontFamily="@font/coolvetica_rg"/>

            <EditText
                android:id="@+id/edit_text_ttl_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin_12"
                android:background="@drawable/bg_rounded_edit_text"
                android:textSize="@dimen/item_size_14"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDimGray"
                android:textAlignment="center"
                android:hint="@string/tanggal_lahir"
                android:editable="false"
                app:fontFamily="@font/coolvetica_rg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="@color/colorFont"
                android:layout_marginTop="@dimen/item_margin_56"
                android:layout_marginLeft="@dimen/item_margin_8"
                android:layout_marginStart="@dimen/item_margin_8"
                android:layout_marginBottom="@dimen/item_margin_8"
                app:fontFamily="@font/coolvetica_rg"/>

            <EditText
                android:id="@+id/edit_text_email_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin_12"
                android:background="@drawable/bg_rounded_edit_text"
                android:textSize="@dimen/item_size_14"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDimGray"
                android:textAlignment="center"
                android:inputType="textEmailAddress"
                android:hint="@string/email"
                app:fontFamily="@font/coolvetica_rg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textColor="@color/colorFont"
                android:layout_marginTop="@dimen/item_margin_16"
                android:layout_marginLeft="@dimen/item_margin_8"
                android:layout_marginStart="@dimen/item_margin_8"
                android:layout_marginBottom="@dimen/item_margin_8"
                app:fontFamily="@font/coolvetica_rg"/>

            <EditText
                android:id="@+id/edit_text_password_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin_12"
                android:background="@drawable/bg_rounded_edit_text"
                android:textSize="@dimen/item_size_14"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDimGray"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:hint="@string/password"
                app:fontFamily="@font/coolvetica_rg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/konfirmasi_password"
                android:textColor="@color/colorFont"
                android:layout_marginTop="@dimen/item_margin_16"
                android:layout_marginLeft="@dimen/item_margin_8"
                android:layout_marginStart="@dimen/item_margin_8"
                android:layout_marginBottom="@dimen/item_margin_8"
                app:fontFamily="@font/coolvetica_rg"/>

            <EditText
                android:id="@+id/edit_text_konfirmasi_password_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin_12"
                android:background="@drawable/bg_rounded_edit_text"
                android:textSize="@dimen/item_size_14"
                android:textColor="@color/black"
                android:textColorHint="@color/colorDimGray"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:hint="@string/konfirmasi_password"
                app:fontFamily="@font/coolvetica_rg"/>

            <Button
                android:id="@+id/btn_daftar_register"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/item_margin_56"
                android:layout_marginBottom="@dimen/item_margin_16"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_green"
                android:text="@string/daftar"
                android:textSize="@dimen/item_size_14"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:foreground="?android:attr/selectableItemBackground"
                app:fontFamily="@font/coolvetica_rg"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>