<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/container_laporan"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_4"
        android:layout_marginBottom="@dimen/item_margin_8"
        android:paddingLeft="@dimen/item_margin_2"
        android:paddingRight="@dimen/item_margin_2"
        android:paddingBottom="@dimen/item_margin_4"
        android:background="@drawable/shadow"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            card_view:cardElevation="@dimen/item_margin_10"
            app:cardCornerRadius="@dimen/item_radius_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/item_margin_4"
                android:paddingLeft="@dimen/item_margin_8"
                android:paddingRight="@dimen/item_margin_8"
                android:paddingBottom="@dimen/item_margin_4"
                android:background="@drawable/shadow_card_view"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_week_laporan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/item_margin_32"
                    android:layout_marginEnd="@dimen/item_margin_32"
                    android:text="@string/label_week"
                    android:fontFamily="@font/coolvetica_rg"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_berat_laporan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_margin_32"
                    android:layout_marginStart="@dimen/item_margin_32"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="@dimen/item_margin_2"
                    android:paddingRight="@dimen/item_margin_2"
                    android:text="@string/label_weight_small"
                    android:textSize="@dimen/item_size_14"
                    android:fontFamily="@font/coolvetica_rg"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_label_rp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_week_laporan"
                    android:layout_marginTop="@dimen/item_margin_4"
                    android:layout_marginBottom="@dimen/item_margin_4"
                    android:text="@string/label_currency"
                    android:fontFamily="@font/coolvetica_rg"
                    android:textSize="@dimen/item_size_20"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/tv_total_uang_laporan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_week_laporan"
                    android:layout_marginTop="@dimen/item_margin_4"
                    android:layout_marginLeft="@dimen/item_margin_8"
                    android:layout_marginRight="@dimen/item_margin_8"
                    android:layout_marginBottom="@dimen/item_margin_4"
                    android:layout_toRightOf="@id/tv_label_rp"
                    android:layout_toEndOf="@id/tv_label_rp"
                    android:text="@string/zero"
                    android:fontFamily="@font/coolvetica_rg"
                    android:textSize="@dimen/item_size_20"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_berat_laporan"
                    android:layout_marginTop="@dimen/item_margin_16"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/coolvetica_rg"
                    android:text="@string/label_details"
                    android:textSize="@dimen/item_size_12" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>