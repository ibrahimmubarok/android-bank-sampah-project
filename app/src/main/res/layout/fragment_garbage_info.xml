<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".ui.InfoSampahFragment">

    <ProgressBar
        android:id="@+id/progress_bar_garbage_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleLarge"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:visibility="gone"
        tools:ignore="UnusedAttribute" />

    <include
        android:id="@+id/layout_no_koneksi"
        layout="@layout/fragment_no_internet"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/main_layout_garbage_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/item_margin_32"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/item_size_24"
            app:fontFamily="@font/coolvetica_rg"
            android:text="@string/label_garbage_info" />

        <EditText
            android:id="@+id/edit_text_search_garbage_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_margin_16"
            android:paddingTop="@dimen/item_margin_10"
            android:paddingLeft="@dimen/item_margin_16"
            android:paddingRight="@dimen/item_margin_16"
            android:paddingBottom="@dimen/item_margin_10"
            android:drawableEnd="@drawable/ic_icon_search"
            android:hint="@string/cari_nama_barang"
            android:textSize="@dimen/item_size_16"
            android:textColor="@color/colorFont"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:background="@drawable/bg_rounded_search_edit_text"
            app:fontFamily="@font/coolvetica_rg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_16"
            android:layout_marginRight="@dimen/item_margin_16"
            android:textColor="@color/black"
            android:textSize="@dimen/item_size_16"
            app:fontFamily="@font/coolvetica_rg"
            android:text="@string/kategori" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_category_garbage_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_12"
            android:layout_marginStart="@dimen/item_margin_12"
            tools:listitem="@layout/item_category_garbage_info"
            tools:itemCount="1"
            android:overScrollMode="never"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/item_size_12"
            android:paddingTop="@dimen/item_margin_8"
            android:paddingBottom="@dimen/item_margin_8"
            android:background="@drawable/bg_white_layout"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_green_stroke"
                android:paddingTop="@dimen/item_margin_6"
                android:paddingLeft="@dimen/item_margin_4"
                android:paddingRight="@dimen/item_margin_4"
                android:paddingBottom="@dimen/item_margin_8"
                android:layout_marginTop="@dimen/item_margin_12"
                android:layout_marginLeft="@dimen/item_margin_16"
                android:layout_marginRight="@dimen/item_margin_16"
                android:layout_marginBottom="@dimen/item_margin_2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:fontFamily="@font/coolvetica_rg"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/nomor"
                        android:gravity="center"
                        android:textSize="@dimen/item_size_16"/>

                    <TextView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_sampah"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        app:fontFamily="@font/coolvetica_rg"
                        android:textSize="@dimen/item_size_16"/>

                    <TextView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/harga_kg"
                        android:textColor="@color/colorPrimaryDark"
                        app:fontFamily="@font/coolvetica_rg"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:gravity="end"
                        android:textSize="@dimen/item_size_16"/>

                </TableRow>
            </TableLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_garbage_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_garbage_info"
                android:overScrollMode="never"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>