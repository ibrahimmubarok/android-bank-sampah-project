<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.InfoSampahFragment">

    <ProgressBar
        android:id="@+id/progress_bar_garbage_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <include
        android:id="@+id/layout_no_koneksi"
        layout="@layout/fragment_no_internet"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/main_layout_garbage_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/item_margin_32"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/label_garbage_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/item_size_16"
            android:layout_marginLeft="@dimen/item_margin_32"
            android:layout_marginRight="@dimen/item_margin_32"
            android:layout_marginBottom="@dimen/item_margin_32"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                card_view:cardElevation="@dimen/item_margin_10"
                app:cardCornerRadius="@dimen/item_radius_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/item_margin_8"
                    android:background="@drawable/shadow_card_view"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/item_margin_4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="@string/nomor"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/item_size_18"/>

                        <TextView
                            android:layout_width="155dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/jenis"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/item_size_18"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:text="@string/harga_kg"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/item_size_18"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_garbage_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_margin_8"
                        android:layout_marginBottom="@dimen/item_margin_8"
                        tools:listitem="@layout/item_garbage_info"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>