<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".presentation.membership.changepassword.ChangePasswordActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_change_password"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorProfile"
            android:textAlignment="center"
            app:titleTextColor="@color/black"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_margin_60"
                android:layout_marginEnd="@dimen/item_margin_60"
                app:fontFamily="@font/coolvetica_rg"
                android:textColor="@android:color/black"
                android:textSize="@dimen/item_size_22"
                android:text="@string/ganti_password"
                android:gravity="center"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_16"
        android:layout_marginLeft="@dimen/item_margin_32"
        android:layout_marginRight="@dimen/item_margin_32"
        android:layout_marginBottom="@dimen/item_margin_16"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_baru"
            android:textColor="@android:color/black"
            app:fontFamily="@font/coolvetica_rg"
            android:layout_marginTop="@dimen/item_margin_16"
            android:layout_marginLeft="@dimen/item_margin_8"
            android:layout_marginStart="@dimen/item_margin_8"
            android:layout_marginBottom="@dimen/item_margin_8" />

        <EditText
            android:id="@+id/edit_text_new_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_margin_12"
            android:background="@drawable/bg_rounded_edit_text"
            app:fontFamily="@font/coolvetica_rg"
            android:textSize="@dimen/item_size_14"
            android:textColor="@color/colorFont"
            android:textColorHint="@color/colorDimGray"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:hint="@string/password"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/konfirmasi_password"
            android:textColor="@android:color/black"
            app:fontFamily="@font/coolvetica_rg"
            android:layout_marginTop="@dimen/item_margin_16"
            android:layout_marginLeft="@dimen/item_margin_8"
            android:layout_marginStart="@dimen/item_margin_8"
            android:layout_marginBottom="@dimen/item_margin_8" />

        <EditText
            android:id="@+id/edit_text_konfirmasi_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_margin_12"
            android:background="@drawable/bg_rounded_edit_text"
            app:fontFamily="@font/coolvetica_rg"
            android:textSize="@dimen/item_size_14"
            android:textColor="@color/colorFont"
            android:textColorHint="@color/colorDimGray"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:hint="@string/konfirmasi_password"/>

        <Button
            android:id="@+id/btn_save_change_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/item_margin_56"
            android:layout_marginBottom="@dimen/item_margin_16"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_green"
            android:text="@string/simpan"
            android:textSize="@dimen/item_size_14"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:fontFamily="@font/coolvetica_rg"/>

    </LinearLayout>
</LinearLayout>