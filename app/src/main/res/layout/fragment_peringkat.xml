<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context=".ui.PeringkatFragment">

    <ProgressBar
        android:id="@+id/progress_bar_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleLarge"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:visibility="gone"/>

    <include
        android:id="@+id/layout_no_koneksi"
        layout="@layout/fragment_no_internet"
        android:visibility="gone"/>

    <include
        android:id="@+id/layout_ranking_unavailable"
        layout="@layout/fragment_ranking_unvailable"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/main_layout_peringkat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/item_size_20"
                    app:fontFamily="@font/coolvetica_rg"
                    android:text="@string/label_ranking_mingguan" />

                <TextView
                    android:id="@+id/tv_periode_ranking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorFont"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:fontFamily="@font/coolvetica_rg"
                    android:text="@string/label_per_minggu" />

                <ImageView
                    android:layout_width="198dp"
                    android:layout_height="137dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/ic_ilus_ranking"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_ranking"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_margin_190"
                    android:layout_marginTop="@dimen/item_margin_16"
                    tools:listitem="@layout/item_peringkat"
                    android:overScrollMode="never"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:text="@string/random_winner"
                    app:fontFamily="@font/coolvetica_rg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_margin_4"
                    android:paddingLeft="@dimen/item_margin_1"
                    android:paddingRight="@dimen/item_margin_1"
                    android:paddingBottom="@dimen/item_margin_4"
                    android:background="@drawable/shadow"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/transparent"
                        card_view:cardElevation="4dp"
                        app:cardCornerRadius="@dimen/item_margin_8">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/item_margin_12"
                            android:background="@drawable/shadow_card_view">

                            <TextView
                                android:id="@+id/tv_name_random_ranking"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/item_margin_8"
                                android:layout_marginLeft="@dimen/item_margin_8"
                                android:maxLines="2"
                                android:text="@string/nama_random_winner"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/item_size_20"
                                app:fontFamily="@font/coolvetica_rg"/>

                            <TextView
                                android:id="@+id/tv_nilai_random_ranking"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:text="@string/null_value"
                                android:textSize="@dimen/item_size_20"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="viewEnd"
                                android:gravity="end"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                app:fontFamily="@font/coolvetica_rg"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>