<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_help"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/tv_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kontak_kami"
        android:textSize="@dimen/item_size_18"
        app:fontFamily="@font/coolvetica_rg"
        android:textColor="@android:color/black"
        android:paddingTop="@dimen/item_margin_16"
        android:paddingLeft="@dimen/item_margin_52"
        android:paddingRight="@dimen/item_margin_52"
        android:paddingBottom="@dimen/item_margin_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_margin_1"
        android:background="@color/colorBorderDark" />

</LinearLayout>