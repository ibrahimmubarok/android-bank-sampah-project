<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailTabunganActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_detail_disbursement"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorProfile"
            android:textAlignment="center"
            app:titleTextColor="@color/black"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_margin_60"
                android:layout_marginEnd="@dimen/item_margin_60"
                app:fontFamily="@font/coolvetica_rg"
                android:textColor="@android:color/black"
                android:textSize="@dimen/item_size_22"
                android:text="@string/laporan_tabungan"
                android:gravity="center"/>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_below="@id/appbar"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/item_margin_32"
        android:layout_marginLeft="@dimen/item_margin_32"
        android:layout_marginRight="@dimen/item_margin_32"
        android:layout_marginBottom="@dimen/item_margin_8"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_left_detail_tabungan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <TextView
            android:id="@+id/tv_name_detail_tabungan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bulan_namabulan_tahun"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/item_size_20"
            android:textAlignment="center"
            android:gravity="center_vertical"
            app:fontFamily="@font/coolvetica_rg"/>

        <ImageView
            android:id="@+id/img_right_detail_tabungan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_detail_tabungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_8"
        android:layout_marginLeft="@dimen/item_margin_16"
        android:layout_marginRight="@dimen/item_margin_16"
        android:layout_marginBottom="@dimen/item_margin_32"
        android:layout_below="@id/relative_layout"
        android:layout_above="@id/linear_layout"
        android:overScrollMode="never"
        tools:listitem="@layout/item_detail_tabungan"/>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/item_margin_16"
        android:paddingLeft="@dimen/item_margin_1"
        android:paddingRight="@dimen/item_margin_1"
        android:paddingBottom="@dimen/item_margin_4"
        android:background="@drawable/shadow"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            card_view:cardElevation="4dp"
            app:cardCornerRadius="@dimen/item_margin_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin_12"
                android:background="@drawable/shadow_card_view">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/item_margin_8"
                    android:layout_marginLeft="@dimen/item_margin_8"
                    android:maxLines="2"
                    android:text="@string/total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_size_18"
                    app:fontFamily="@font/coolvetica_rg"/>

                <TextView
                    android:id="@+id/tv_berat_total_detail_tabungan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/item_margin_8"
                    android:layout_marginLeft="@dimen/item_margin_8"
                    android:layout_toLeftOf="@id/tv_saldo_total_detail_tabungan"
                    android:layout_toStartOf="@id/tv_saldo_total_detail_tabungan"
                    android:layout_marginRight="@dimen/item_margin_8"
                    android:layout_marginEnd="@dimen/item_margin_8"
                    android:maxLines="2"
                    android:text="@string/null_value"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/item_size_18"
                    app:fontFamily="@font/coolvetica_rg"/>

                <TextView
                    android:id="@+id/tv_saldo_total_detail_tabungan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_margin_16"
                    android:layout_marginStart="@dimen/item_margin_16"
                    android:text="@string/rp_0"
                    android:textSize="@dimen/item_size_18"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="viewEnd"
                    android:gravity="end"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    app:fontFamily="@font/coolvetica_rg"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>