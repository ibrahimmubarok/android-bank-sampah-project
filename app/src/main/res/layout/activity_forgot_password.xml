<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotPasswordActivity">

    <ImageView
        android:id="@+id/img_back_arrow"
        android:layout_width="@dimen/item_margin_38"
        android:layout_height="@dimen/item_margin_38"
        android:layout_margin="@dimen/item_margin_16"
        android:padding="@dimen/item_margin_8"
        android:background="@drawable/circle_shape"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:src="@drawable/ic_button_back_green"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginLeft="@dimen/item_margin_32"
        android:layout_marginRight="@dimen/item_margin_32"
        android:layout_marginBottom="@dimen/item_margin_16"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_98sdp"
            android:paddingTop="@dimen/item_margin_6"
            android:src="@drawable/ic_logo_bss"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_27sdp"
            android:text="@string/lupa_sandi"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:fontFamily="@font/coolvetica_rg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_8"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp"
            android:text="@string/label_instructions"
            app:fontFamily="@font/coolvetica_rg"/>

        <EditText
            android:id="@+id/edit_text_email_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/item_margin_12"
            android:layout_marginTop="@dimen/_27sdp"
            android:background="@drawable/bg_rounded_edit_text"
            android:textSize="@dimen/_12ssp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorFont"
            android:textAlignment="center"
            android:inputType="textEmailAddress"
            android:hint="@string/email_address"
            app:fontFamily="@font/coolvetica_rg"/>

        <Button
            android:id="@+id/btn_send_email_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_66sdp"
            android:layout_marginBottom="@dimen/item_margin_8"
            android:background="@drawable/bg_rounded_green_false"
            android:text="@string/send_email"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/colorItemBackground"
            android:enabled="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:fontFamily="@font/coolvetica_rg"/>

    </LinearLayout>
</LinearLayout>