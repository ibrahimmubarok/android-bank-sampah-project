<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_dialog"
    android:paddingTop="@dimen/item_margin_16"
    android:paddingLeft="@dimen/item_margin_32"
    android:paddingRight="@dimen/item_margin_32"
    android:paddingBottom="@dimen/item_margin_16"
    tools:context=".ui.customdialog.CustomDialogTwo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/item_margin_16"
        android:src="@drawable/ic_icon_alert"/>

    <TextView
        android:id="@+id/tv_head_dialog_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apakah_kamu_yakin_ingin_keluar"
        android:textSize="@dimen/item_size_20"
        android:textColor="@color/black"
        app:fontFamily="@font/coolvetica_rg"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/item_margin_16"
        android:padding="@dimen/item_margin_8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/item_margin_16">

        <TextView
            android:id="@+id/tv_tidak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tidak"
            android:textSize="@dimen/item_size_20"
            android:textColor="@color/colorPrimary"
            app:fontFamily="@font/coolvetica_rg"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/item_margin_4"
            android:foreground="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/tv_ya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ya"
            android:textSize="@dimen/item_size_20"
            android:textColor="@color/colorFont"
            app:fontFamily="@font/coolvetica_rg"
            android:gravity="center_horizontal"
            android:padding="@dimen/item_margin_4"
            android:foreground="?android:attr/selectableItemBackground"/>


    </LinearLayout>

</LinearLayout>